<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--应用的主要色调,actionBar默认使用该颜色,Toolbar导航栏的底色-->
    <color name="colorPrimary">@color/titleBar</color>
    <!--状态栏颜色,应用的主要暗色调,statusBarColor默认使用该颜色-->
    <color name="colorPrimaryDark">@color/statusBar</color>
    <!--CheckBox,RadioButton,SwitchCompat等一般控件的选中效果默认采用该颜色-->
    <color name="colorAccent">@color/colorTheme</color>
    <!--控件按压时的色调-->
    <color name="colorControlHighlight">@color/pale_grey</color>
    <!--默认按钮的背景颜色-->
    <color name="colorButtonNormal">@color/pale_grey</color>
    <!--窗口背景颜色-->
    <color name="windowBackground">@color/white</color>
    <!--底部栏颜色-->
    <color name="navigationBarColor">@color/white</color>


    <!--主题颜色-->
    <color name="colorTheme">#00C6FF</color>
    <!--所有界面的状态栏的背景颜色-->
    <color name="statusBar">@color/colorTheme</color>
    <!--所有界面的标题栏的背景颜色-->
    <color name="titleBar">@color/colorTheme</color>
    <!--所有界面的分割线颜色-->
    <color name="item_div_bg">#EAEAEA</color>


    <!-- 一级标题、正文字体颜色，二级页面导航栏返回键/其他图标颜色 -->
    <color name="title_color">#1F2336</color>
    <!-- 二级标题、正文字体颜色 -->
    <color name="text_color">#878B99</color>
    <!-- 辅助字体（注释、时间等）颜色 -->
    <color name="auxiliary_color">#B0B3BF</color>
    <!-- 提示性文字 -->
    <color name="tips_color">#A9A9A9</color>


    <!--黑色透明度-->
    <color name="black_100">#FF000000</color>
    <color name="black_90">#E6000000</color>
    <color name="black_80">#CC000000</color>
    <color name="black_70">#B3000000</color>
    <color name="black_60">#99000000</color>
    <color name="black_50">#80000000</color>
    <color name="black_40">#66000000</color>
    <color name="black_30">#4D000000</color>
    <color name="black_20">#33000000</color>
    <color name="black_10">#1A000000</color>
    <color name="black_0">#00000000</color>

    <!--常见颜色-->
    <color name="white">#FFFFFF</color><!--白色 -->
    <color name="black">#000000</color><!--黑色 -->
    <color name="yellow">#FFFF00</color><!--黄色 -->
    <color name="orange">#FFA500</color><!--橙色 -->
    <color name="red">#FF0000</color><!--红色 -->
    <color name="gray">#808080</color><!--灰色 -->
    <color name="pale_grey">#F2F2F2</color><!--淡灰色-->
    <color name="purple">#800080</color><!--紫色 -->
    <color name="cyan">#00FFFF</color><!--青色 -->
    <color name="green">#008000</color><!--绿色 -->
    <color name="blue">#0000FF</color><!--蓝色 -->
    <color name="transparent">#00000000</color><!--透明 -->
    <color name="translucent">#80000000</color><!--半透明-->

</resources>
